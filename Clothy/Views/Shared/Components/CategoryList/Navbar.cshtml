@model Clothy.Models.ClothyViewModels.CategoryListViewModel

<nav class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-second">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Menu</a>
        </div>
        <div class="navbar-collapse collapse nav-second">
            <ul class="nav navbar-nav">
                @foreach (var catModel in Model.Models)
                {
                    <li><a asp-area="" asp-controller="Item" asp-action="Categorize" asp-route-catId="@catModel.Id">@catModel.Name</a></li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a asp-area="" asp-controller="Cart" asp-action="Preview">Cart</a></li>
            </ul>
        </div>
    </div>
</nav>